<% layout('layouts/boilerplate') %> <% let totalpemasukan = 0; let
totalpengeluaran = 0; for (let isi of transaksi) { if (isi.jenis == "Pemasukan")
{ totalpemasukan += isi.nominal; } else { totalpengeluaran += isi.nominal; } }
%>

<a class="row" href="/KelolaUang/rekening" style="text-decoration: none">
  <div class="col-lg-10 offset-lg-1">
    <div class="card border-info mb-3">
      <div class="card-header text-white bg-info">
        <h3 class="text-center">REKENING</h3>
      </div>
      <div class="card-body text-info bg-white">
        <h1
          class="card-title display-4 font-weight-bold d-flex justify-content-between"
        >
          <span>Rp</span>
          <span> <%= totalpemasukan.toLocaleString("id-ID") %> </span>
        </h1>
      </div>
    </div>
  </div>
</a>

<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="card border-danger mb-3">
      <div class="card-header text-white bg-danger">
        <h3 class="text-center">TOTAL PENGELUARAN</h3>
      </div>
      <div class="card-body text-danger bg-white">
        <h1
          class="card-title display-4 font-weight-bold d-flex justify-content-between"
        >
          <span>Rp</span>
          <span> <%= totalpengeluaran.toLocaleString("id-ID") %> </span>
        </h1>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="card border-info mb-3">
      <div class="card-header text-white bg-info">
        <h3 class="text-center">SALDO AKHIR</h3>
      </div>
      <div class="card-body text-info bg-white">
        <h1
          class="card-title display-4 font-weight-bold d-flex justify-content-between"
        >
          <span>Rp</span>
          <span>
            <%= (totalpemasukan-totalpengeluaran).toLocaleString("id-ID") %>
          </span>
        </h1>
      </div>
    </div>
  </div>
</div>
